{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": ".*",
            "methods": [
                "GET",
                "POST",
                "DELETE",
                "PUT",
                "OPTIONS"
            ],
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept",
                "Access-Control-Allow-Credentials": "true"
            },
            "dest": "app.js",
            "continue": true
        },
        {
            "src": "/cerveceria/(?<id>[^/]+)",
            "dest": "/app.js/?id=$id",
            "methods": [
                "DELETE"
            ]
        },
        {
            "src": "/cerveceria/(?<id>[^/]+)",
            "dest": "/app.js/?id=$id",
            "methods": [
                "PUT"
            ]
        },
        {
            "src": "/cervecerias",
            "dest": "/app.js",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/cervecerias",
            "dest": "/app.js",
            "methods": [
                "POST"
            ]
        }
    ]
}